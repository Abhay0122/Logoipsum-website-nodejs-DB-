<%-include('header')%>
  <!-- nav -->
  <%- include('nav-home')%>

    <!-- profile -->

    <div class="profile_content_wrapper">
      <!-- left -->
      <div class="profile_content_left">
        <div class="profile_content_left_top">
          <h1>
            <%= user.name%>
          </h1>
        </div>
        <div class="profile_content_left_middle">
          <nav>
            <a href="/profile"><span>Home</span></a>
            <a href="/about"><span>About</span></a>
          </nav>
        </div>

        <div class="profile_content_left_bottom">
          <!--  -->
            <div class="openTextbox">
              <div id="openTextbox_btn">
                <i class="ri-edit-2-fill"></i>
              </div>
              <h3>About yourself</h3>
              <p><%= user.about%></p>
            </div>
          <!--  -->
          <div class="abouttextarea_wrapper">
            <form action="/about" method="post" class="about_textarea_form">
              <textarea class="about_textarea" name="about" placeholder="enter text here">
                <%= user.about%>
              </textarea>
              <button id="about_save">Save</button>
              <a id="abouttextarea_cancel_btn" href="/about">Cancel</a>
            </form>
          </div>
          <!--  -->
        </div>
      </div>
      <!-- right -->
      <div class="profile_content_right">
        <div id="user_profile_img" style="background-image: url('/uploads/<%= user.avatar%>'); background-position: center; background-size: contain;"></div>
        <h2><%= user.name%></h2>
        <p><%= user.bio%></p>
        <a href="/settings">Edit profile</a>
      </div>

    </div>


  
    <!--  -->
    <%-include('footer')%>